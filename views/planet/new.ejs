<!-- views/planets/new.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create a Planet</title>
  </head>
  <body>
    <h1>Create a New Planet</h1>
    <a href="/planet">Back to Planets</a>

    <form action="/planet" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" />

      <label for="description">Description:</label>
      <input type="text" name="description" id="description" />

      <label for="distanceFromSun">Distance from the Sun (millions km):</label>
      <input type="number" name="distanceFromSun" id="distanceFromSun" />

      <label for="image">Image URL:</label>
      <input type="text" name="image" id="image" />

      <label for="hasRings">Has rings?</label>
      <input type="checkbox" name="hasRings" id="hasRings" />

      <button type="submit">Add Planet</button>
    </form>
  </body>
</html>
